{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "short_name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "homepage_url": "https://9cscan.com",
  "version": "0.0.1",
  "default_locale": "en",
  "action": {
    "default_icon": "images/logo.png",
